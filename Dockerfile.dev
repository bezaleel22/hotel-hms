FROM php:7.4-apache

# Install system dependencies
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    zip \
    unzip \
    git \
    sendmail \
    sendmail-bin \
    mailutils \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j$(nproc) gd mysqli pdo pdo_mysql \
    && a2enmod rewrite

# Configure Apache
COPY docker-config/apache.conf /etc/apache2/sites-available/000-default.conf

# Set working directory
WORKDIR /var/www/html

# Install Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Copy composer.json
COPY composer.json ./

# Install dependencies
RUN composer install --no-scripts

# Create required directories and set permissions for CodeIgniter
RUN mkdir -p /var/www/html/application/logs \
    /var/www/html/application/cache \
    /var/www/html/application/cache/temp \
    /var/www/html/application/config \
    /var/www/html/install \
    && chown -R www-data:www-data /var/www/html \
    && chmod -R 755 /var/www/html \
    && chmod -R 777 /var/www/html/application/logs \
    && chmod -R 777 /var/www/html/application/cache \
    && chmod -R 777 /var/www/html/application/cache/temp \
    && chmod -R 777 /var/www/html/application/config \
    && chmod -R 777 /var/www/html/install

# Configure PHP
COPY docker-config/php.ini /usr/local/etc/php/php.ini

CMD ["apache2-foreground"]